@{
    ViewData["Title"] = $"Профиль - {Model.FullName}";
    string FullName = Model.FullName;
    string Name = Model.Name;
    string Surname = Model.Surname;
    string? Patronymic = Model.Patronymic;
    string ImageUrl = Model.ImageUrl;
    long id = Model.Id;
}

<body>
    <div class="container">
        <img src="@ImageUrl" alt="Profile Image" class="profile-img">
        <h1 class="fullname">@FullName</h1>
        <!-- Additional profile information can be added here -->
    </div>

    <form method="post" enctype="multipart/form-data" action="@GetActionUrl()">
        <input type="file" name="profilePicture" accept="image/*">
        <input type="hidden" id="id" name="id" value="@id">
        <button type="submit">Change Profile Picture</button>
    </form>

    <form method="post" action="/Profile/AdminChangePassword">
        <input type="password" name="currentPassword" placeholder="Current Password" required>
        <input type="password" name="newPassword" placeholder="New Password" required>
        <input type="password" name="confirmNewPassword" placeholder="Confirm New Password" required>
        <button type="submit">Change Password</button>
    </form>
</body>

@{
    string GetActionUrl()
    {
        // Assuming you want to navigate to /Profile/AdminChangeProfilePicture/{Id}
        return $"/Profile/AdminChangeProfilePicture";
    }
}